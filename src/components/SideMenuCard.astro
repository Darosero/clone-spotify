---
import type { Playlist } from "../lib/data";
interface Props {
  playlists: Playlist;
}
const { playlists } = Astro.props;
const { id, cover, title, artists, color } = playlists;
const artistString = artists.join(",");
---

<a
  href=`/playlist/${id}`
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-4 rounded-lg hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none"
    ><img
      src={cover}
      alt={`Cover of ${title} by ${artistString}`}
      class="object-cover w-full h-full rounded-lg"
    /></picture
  >
  <div class="flex flex-col flex-auto truncate">
    <h4 class="text-sm">{title}</h4>
    <span class="text-xs text-gray-400">{artistString}</span>
  </div>
</a>
