---
import Layout from "../layouts/Layout.astro";
import PlayListItemCard from "../components/PlayListItemCard.astro";
import { playlists } from "../lib/data";
---

<Layout title="Spotify Clone.">
  <div
    id="playlist-content"
    class="relative transition-all duration-100 bg-blue-900 rounded-lg"
  >
    <div class="relative z-10 px-4 pt-4">
      <div>
        <h2 class="text-3xl font-bold">Buenas Tardes</h2>
        <div class="flex flex-grap mt-6 gap-4">
          {
            playlists.map((playlists) => (
              <PlayListItemCard playlists={playlists} />
            ))
          }
        </div>
      </div>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>
